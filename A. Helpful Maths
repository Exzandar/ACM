// IN THE NAME OF ALLAH ^_^
#include <iostream>
#include <string>
#include <cmath>
#include <algorithm>

using namespace std;

int main ()
{
    string s;
    cin >> s;
    sort(s.begin(), s.end());
    s.erase(0, s.length()/2);
    for (int i=0; i<s.length(); i++){
        if (i==s.length()-1){
            cout << s[i];
        }
        else {
            cout << s[i] << '+';
        }
    }
}
